{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "context/*": ["src/context/*"],
      "hooks/*": ["src/hooks/*"],
      "navigators/*": ["src/navigators/*"],
      "screens/*": ["src/screens/*"],
      "utils/*": ["src/utils/*"],
      "database/*": ["src/database/*"]
    }
  },
  "strict": false,
  "allowSyntheticDefaultImports": true,
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "skipLibCheck": true
}
